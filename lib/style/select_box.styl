/*
Select boxes

Markup:
select.cf-select-box
  option value
  option more
select.cf-select-box.pseudo-class-hover
  option value
  option more
select.cf-select-box(disabled)
  option value
  option more
input.form-control

Styleguide 5.2
*/

$select-box-reset()
  color: inherit
  font-size: inherit
  font-family: inherit
  cursor: inherit
  background: none
  line-height: normal
  border: 0
  outline: 0
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  &::-ms-expand
    display: none

$select-box-caret = url("http://static.contentful.com/app/svg/dd-arrow-down.svg")
$select-box-caret-disabled = url("http://static.contentful.com/app/svg/dd-arrow-down-disabled.svg")
$select-box-hover-gradient = linear-gradient(to bottom, white, #F9F9F9)

.cf-select-box
  $select-box-reset()
  $input-dimensions()
  $input-appearance()
  padding-left: 1ex
  padding-right: 8ex

  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

  background-image:    $select-box-caret, none
  background-position: center right 0.8em
  background-repeat:   no-repeat, repeat
  background-size:     0.7em, 100%

  &:hover:not(:disabled)
    background-image: $select-box-caret, $select-box-hover-gradient

  &:disabled
    background-color: hsl(0, 0%, 93%)
    background-image: $select-box-caret-disabled
    border: 1px solid $colors.light-gray
    color: hsl(0, 0%, 61%)
    cursor: not-allowed;


.inline-select
  background: transparent
  color: inherit
  font-size: inherit
  margin: 0
  margin-top: -2px
  margin-left: 3px
  margin-right: 3px
